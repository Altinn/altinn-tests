{
  "env": {
    "cypress/globals": true
  },
  "plugins": [
    "cypress"
  ],
  "extends": [
    "plugin:cypress/recommended",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": [
    "src/data",
    "src/reports",
    "src/fixtures",
    "src/config"
  ],
  "rules": {
    "eol-last": "error",
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreUrls": true
      }
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "warn",
      "never"
    ]
  }
}